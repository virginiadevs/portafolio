---
import { education } from "@/data/cv.json";
import Section from "@/components/Section.astro";
---

<Section title="FormaciÃ³n">
    <ul>
        {
            education.map(
                ({ institution, startDate, endDate, course }) => {
                const startYear = new Date(startDate).getFullYear()
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "Presente"
                const years = `${startYear} - ${endYear}`
                
                return (
                    <li>
                        <article>
                            <header>
                                <h3>{course}</h3>
                                <h4>{institution} | <time>{years}</time></h4>
                            </header>
                        </article>                        
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-rows: max-content;
        gap: 1rem;

        & header {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;

            & h3 {
                font-weight: 600;
                font-size: 1rem;
            }
            
            & h4 {
                text-align: right;
                align-content: center;

                & time {
                    letter-spacing: -0.05rem;
                }
            }
        }
    }
</style>